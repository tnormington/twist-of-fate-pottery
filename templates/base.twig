{% block html_head_container %}

	{% include 'html-header.twig' %}
	{% block head %}{% endblock %}
</head>{% endblock %}<body
class="{{body_class}}" data-template="base.twig">
{# <a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a> #}
<header class="header">
	{% block header %}

      <nav id="nav-main" class="navbar navbar-dark navbar-expand-sm bg-transparent fixed-top" role="navigation">
          <div class="container">
          <a class="navbar-brand" href="{{site.url}}" rel="home">
            <img src="{{theme.link}}/assets/moon.svg">
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="main-menu">
            {% include "main-menu.twig" with {'items': menu.get_items} %}

            {% if cart_count > 0 %}
              <a class="btn btn-primary cart-button" href="/cart">
                <img class="mr-1" src="{{theme.link}}/assets/cart.svg">
                Cart <span class="badge badge-light ml-1">{{cart_count}}</span>
              </a>
            {% endif %} 
          </div>
        </div>
      </nav>

			<!-- #nav -->
	{% endblock %}
</header>

{% block hero %}{% endblock %}

<div class="main-content">
  <div class="container">
    <section role="main">
      {% if title %}
        <h1>{{title}}</h1>
      {% endif %}
      <div class="{{sidebar_class}}"> {% block content %}{% endblock %}
        </div>
        {% if sidebar %}
          <aside class="layout-sidebar">
            {{sidebar}}
          </aside>
        {% endif %}
    </section>
  </div>
</div>

	{% block footer %}
  <div class="footer-wrapper">
    <div class="container">
      <footer class="footer" id="footer">
        {% include 'footer.twig' %}
      </footer>
    </div>
  </div>
  {{ function('wp_footer') }}
	{% endblock %}
</body></html>
